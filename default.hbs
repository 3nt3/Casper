{{#define @custom.typography type="select"}}
    {{option value="Sans Serif heading" default="true"}}
    {{option value="Serif heading"}}
{{/define}}
{{#define @custom.cover type="select"}}
    {{option value="With cover image" default="true"}}
    {{option value="With accent color"}}
    {{option value="No cover"}}
{{/define}}
{{#define @custom.image_width type="select"}}
    {{option value="Wide" default="true"}}
    {{option value="Full"}}
    {{option value="Small"}}
{{/define}}
{{define @custom.minimal_cta type="boolean" value="false"}}
{{define @custom.cta_text type="text" value="Sign up for more like this."}}

<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

    {{!-- Basic meta - advanced meta is output with {ghost_head} below --}}
    <title>{{meta_title}}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{!-- Theme assets - use the {asset} helper to reference styles & scripts,
    this will take care of caching and cache-busting automatically --}}
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />

    {{!-- These styles are only used for testing the settings with body class --}}
    <style>
        .font-alt .post-card-title,
        .font-alt .article-title {
            font-family: var(--font-serif);
        }

        .font-alt .gh-content > blockquote,
        .font-alt .gh-content > dl,
        .font-alt .gh-content > ol,
        .font-alt .gh-content > p,
        .font-alt .gh-content > ul {
            font-family: var(--font-sans);
        }

        .cover-no-image .gh-head.has-cover {
            background: var(--ghost-accent-color);
        }

        .cover-no-image .site-header-cover {
            display: none;
        }

        .cover-none .gh-head.has-cover {
            background: var(--ghost-accent-color);
        }

        .cover-none .gh-head {
            position: relative;
        }

        .cover-none .gh-head-logo {
            display: block;
        }

        .cover-none .gh-head-menu {
            margin-left: 0;
        }

        .cover-none .site-header-content {
            display: none;
        }

        .cover-none .site-content {
            padding-top: 4vmin;
        }

        .image-full .article-image {
            grid-column: full-start / full-end;
        }

        .image-small .article-image {
            grid-column: main-start / main-end;
        }

        .cta-alt .footer-cta {
            padding: 2vmin 4vmin 12vmin;
            background: transparent;
        }

        .cta-alt .footer-cta h2 {
            color: var(--color-darkgrey);
        }

        .cta-alt .footer-cta-button {
            border: 1px solid var(--color-lightgrey);
        }

        .footer-cta h2:last-of-type {
            display: none;
        }

        .cta-custom-text .footer-cta h2:first-of-type {
            display: none;
        }

        .cta-custom-text .footer-cta h2:last-of-type {
            display: block;
            max-width: 720px;
            margin-right: auto;
            margin-left: auto;
        }
    </style>

    <style>
        :root {
            --cta-background: {{@custom.cta_background}};
        }
    </style>

    {{!-- This tag outputs all your advanced SEO meta, structured data, and other important settings,
    it should always be the last tag before the closing head tag --}}
    {{ghost_head}}

</head>
<body class="{{body_class}} {{#match @custom.typography "Serif heading"}}font-alt{{/match}}">
<div class="viewport">

    <header id="gh-head" class="gh-head {{^match @custom.cover "No cover"}}{{#if @site.cover_image}}has-cover{{/if}}{{/match}}">
        <nav class="gh-head-inner inner gh-container">

            <div class="gh-head-brand">
                <a class="gh-head-logo" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                </a>
                <a class="gh-burger" role="button">
                    <div class="gh-burger-box">
                        <div class="gh-burger-inner"></div>
                    </div>
                </a>
            </div>
            <div class="gh-head-menu">
                {{navigation}}
            </div>
            <div class="gh-head-actions">
                <div class="gh-social">
                    {{#if @site.facebook}}
                        <a class="gh-social-facebook" href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                    {{/if}}
                    {{#if @site.twitter}}
                        <a class="gh-social-twitter" href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                    {{/if}}
                </div>

                {{#unless @member}}
                    <a class="gh-head-button" href="#/portal/signup">Subscribe</a>
                {{else}}
                    <a class="gh-head-button" href="#/portal/account">Account</a>
                {{/unless}}
            </div>
        </nav>
    </header>

    <div class="site-content">
        {{!-- All other templates get inserted here, index.hbs, post.hbs, etc --}}
        {{{body}}}
    </div>

    {{!-- The global footer at the very bottom of the screen --}}
    <footer class="site-footer outer">
        <div class="inner">
            <section class="copyright"><a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}}</section>
            <nav class="site-footer-nav">
                {{navigation type="secondary"}}
            </nav>
            <div><a href="https://ghost.org/" target="_blank" rel="noopener">Powered by Ghost</a></div>
        </div>
    </footer>

</div>
{{!-- /.viewport --}}


{{!-- Scripts - handle member signups, responsive videos, infinite scroll, floating headers, and galleries --}}
<script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous">
</script>
<script src="{{asset "built/casper.js"}}"></script>
<script>
$(document).ready(function () {
    // Mobile Menu Trigger
    $('.gh-burger').click(function () {
        $('body').toggleClass('gh-head-open');
    });
    // FitVids - Makes video embeds responsive
    $(".gh-content").fitVids();
});
</script>

{{!-- Ghost outputs required functional scripts with this tag - it should always be the last thing before the closing body tag --}}
{{ghost_foot}}

</body>
</html>
